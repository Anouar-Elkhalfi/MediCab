<div class="calendar-pro-container">
  <!-- Sidebar gauche -->
  <div class="calendar-sidebar">
    <!-- Mini calendrier -->
    <div class="mini-calendar-widget card mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <%= link_to calendar_appointments_path(date: @date - 1.month, medecin_id: @selected_medecin&.id), class: "btn btn-sm btn-link", data: { turbo: false } do %>
            <i class="fas fa-chevron-left"></i>
          <% end %>
          <strong><%= l(@date, format: '%B %Y') %></strong>
          <%= link_to calendar_appointments_path(date: @date + 1.month, medecin_id: @selected_medecin&.id), class: "btn btn-sm btn-link", data: { turbo: false } do %>
            <i class="fas fa-chevron-right"></i>
          <% end %>
        </div>
        
        <div class="mini-calendar">
          <div class="weekdays">
            <% %w[L M M J V S D].each do |day| %>
              <div class="weekday"><%= day %></div>
            <% end %>
          </div>
          <div class="days">
            <% start_of_month = @date.beginning_of_month.beginning_of_week(:monday) %>
            <% (0..41).each do |i| %>
              <% day = start_of_month + i.days %>
              <% is_current_month = day.month == @date.month %>
              <% is_today = day == Date.today %>
              <% is_selected = day >= @start_date && day <= @end_date %>
              <%= link_to calendar_appointments_path(date: day, medecin_id: @selected_medecin&.id), 
                  class: "day #{is_current_month ? 'current-month' : 'other-month'} #{is_today ? 'today' : ''} #{is_selected ? 'selected' : ''}",
                  data: { turbo: false } do %>
                <%= day.day %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Salle d'attente -->
    <div class="waiting-room-widget card">
      <div class="card-header bg-warning text-dark">
        <i class="fas fa-clock"></i> Salle d'attente
        <span class="badge bg-dark float-end"><%= @waiting_patients.count %></span>
      </div>
      <div class="card-body p-0">
        <% if @waiting_patients.any? %>
          <div class="waiting-list">
            <% @waiting_patients.each do |appointment| %>
              <div class="waiting-patient-item">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <strong><%= appointment.patient.nom_complet %></strong>
                    <div class="text-muted small">
                      <%= appointment.heure_debut.strftime('%H:%M') %>
                      <% if appointment.heure_arrivee %>
                        <span class="badge bg-info">Arrivé <%= time_ago_in_words(appointment.heure_arrivee) %></span>
                      <% end %>
                    </div>
                  </div>
                  <%= link_to appointment_path(appointment), class: "btn btn-sm btn-outline-primary", data: { turbo: false } do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center text-muted p-3">
            <i class="fas fa-check-circle fa-2x mb-2"></i>
            <div>Aucun patient en attente</div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Zone principale du calendrier -->
  <div class="calendar-main">
    <!-- Header avec filtres -->
    <div class="calendar-header card mb-3">
      <div class="card-body">
        <div class="row align-items-center">
          <div class="col-md-3">
            <h5 class="mb-0">
              <% if @selected_medecin %>
                Dr <%= @selected_medecin.last_name %> <%= @selected_medecin.first_name %>
              <% end %>
            </h5>
          </div>
          <div class="col-md-4">
            <%= form_with url: calendar_appointments_path, method: :get, local: true, class: "d-flex gap-2" do |f| %>
              <%= f.hidden_field :date, value: @date %>
              <%= f.select :medecin_id, 
                  options_from_collection_for_select(@medecins, :id, 
                    ->(m) { "Dr #{m.last_name} #{m.first_name}" }, 
                    @selected_medecin&.id),
                  {}, 
                  class: "form-select", 
                  onchange: "this.form.submit()" %>
            <% end %>
          </div>
          <div class="col-md-5 text-end">
            <div class="btn-group" role="group">
              <%= link_to calendar_appointments_path(date: @date - 7.days, medecin_id: @selected_medecin&.id), 
                  class: "btn btn-outline-secondary", data: { turbo: false } do %>
                <i class="fas fa-chevron-left"></i>
              <% end %>
              <%= link_to calendar_appointments_path(date: Date.today, medecin_id: @selected_medecin&.id), 
                  class: "btn btn-outline-secondary", data: { turbo: false } do %>
                Aujourd'hui
              <% end %>
              <%= link_to calendar_appointments_path(date: @date + 7.days, medecin_id: @selected_medecin&.id), 
                  class: "btn btn-outline-secondary", data: { turbo: false } do %>
                <i class="fas fa-chevron-right"></i>
              <% end %>
            </div>
            <%= link_to new_appointment_path(date: @date, medecin_id: @selected_medecin&.id), 
                class: "btn btn-primary ms-2" do %>
              <i class="fas fa-plus"></i> Nouveau RDV
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Légende des couleurs -->
    <div class="card mb-3">
      <div class="card-body py-2">
        <div class="d-flex justify-content-center gap-3 flex-wrap">
          <span class="status-legend">
            <span class="status-badge a_venir"></span> À venir
          </span>
          <span class="status-legend">
            <span class="status-badge en_salle_attente"></span> En Salle d'attente
          </span>
          <span class="status-legend">
            <span class="status-badge vu"></span> Vu
          </span>
          <span class="status-legend">
            <span class="status-badge encaisse"></span> Encaissé
          </span>
          <span class="status-legend">
            <span class="status-badge absent"></span> Absent
          </span>
          <span class="status-legend">
            <span class="status-badge annule"></span> Annulé
          </span>
        </div>
      </div>
    </div>

    <!-- Grille du calendrier hebdomadaire -->
    <div class="calendar-grid-container">
      <div class="calendar-week-header">
        <div class="time-column-header"></div>
        <% (@start_date..@end_date).each do |day| %>
          <div class="day-column-header <%= 'today' if day == Date.today %>">
            <div class="day-name"><%= l(day, format: '%a') %></div>
            <div class="day-number"><%= day.day %></div>
          </div>
        <% end %>
      </div>

      <div class="calendar-grid">
        <div class="time-column">
          <% @time_slots.each do |time_slot| %>
            <div class="time-slot-label"><%= time_slot %></div>
          <% end %>
        </div>

        <% (@start_date..@end_date).each do |day| %>
          <div class="day-column <%= 'today' if day == Date.today %>">
            <!-- Indicateur d'heure actuelle -->
            <% if day == Date.today %>
              <div class="now-indicator" id="now-indicator-<%= day %>"></div>
            <% end %>
            
            <% @time_slots.each do |time_slot| %>
              <div class="time-slot" data-day="<%= day %>" data-time="<%= time_slot %>">
                <% appointments_at_time = (@appointments_by_day[day] || []).select { |apt| apt.heure_debut.strftime('%H:%M') == time_slot } %>
                
                <% appointments_at_time.each do |appointment| %>
                  <% duration_slots = (appointment.duree / 30.0).ceil %>
                  <a href="#" 
                      class="appointment-card status-#{appointment.statut}" 
                      style="height: #{duration_slots * 100}%;"
                      title="<%= appointment.patient.nom_complet %>"
                      draggable="true"
                      data-appointment-id="<%= appointment.id %>"
                      data-current-date="<%= appointment.date_rdv %>"
                      data-current-time="<%= appointment.heure_debut.strftime('%H:%M') %>"
                      data-patient-name="<%= appointment.patient.nom_complet %>"
                      data-patient-phone="<%= appointment.patient.telephone %>"
                      data-medecin-name="Dr <%= appointment.medecin.last_name %>"
                      data-time-start="<%= appointment.heure_debut.strftime('%H:%M') %>"
                      data-time-end="<%= appointment.heure_fin.strftime('%H:%M') %>"
                      data-motif="<%= appointment.motif %>"
                      data-statut="<%= appointment.statut %>"
                      data-statut-label="<%= Appointment::STATUT_LABELS[appointment.statut] %>"
                      onclick="openAppointmentModal(event, this); return false;">
                    <div class="appointment-time"><%= appointment.heure_debut.strftime('%H:%M') %></div>
                    <div class="appointment-patient"><%= appointment.patient.nom.upcase %> <%= appointment.patient.prenom %></div>
                    <% if appointment.motif.present? %>
                      <div class="appointment-motif"><%= truncate(appointment.motif, length: 30) %></div>
                    <% end %>
                  </a>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

