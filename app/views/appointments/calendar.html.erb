<script>
  // Fonction pour positionner l'indicateur d'heure actuelle
  function updateNowIndicator() {
    const indicators = document.querySelectorAll('.now-indicator');
    
    indicators.forEach(indicator => {
      const now = new Date();
      const hours = now.getHours();
      const minutes = now.getMinutes();
      
      // Calculer la position en pixels depuis 8h00 (début de la journée)
      const startHour = 8;
      const slotHeight = 60; // Hauteur d'un slot de 30 minutes
      
      // Si l'heure actuelle est en dehors des heures de travail (8h-20h)
      if (hours < startHour || hours >= 20) {
        indicator.style.display = 'none';
        return;
      }
      
      // Calculer la position
      const totalMinutesSinceStart = (hours - startHour) * 60 + minutes;
      const position = (totalMinutesSinceStart / 30) * slotHeight;
      
      indicator.style.top = `${position}px`;
      indicator.style.display = 'block';
      
      // Ajouter l'heure actuelle comme data-time
      const timeString = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;
      indicator.setAttribute('data-time', timeString);
    });
  }
  
  // Initialiser au chargement
  document.addEventListener('DOMContentLoaded', function() {
    updateNowIndicator();
    
    // Mettre à jour toutes les minutes
    setInterval(updateNowIndicator, 60000);
  });
  
  // Mettre à jour après navigation Turbo
  document.addEventListener('turbo:load', function() {
    updateNowIndicator();
    
    // Nettoyer les anciens intervalles et en créer un nouveau
    if (window.nowIndicatorInterval) {
      clearInterval(window.nowIndicatorInterval);
    }
    window.nowIndicatorInterval = setInterval(updateNowIndicator, 60000);
  });
  
  // ========== DRAG AND DROP ==========
  let draggedAppointment = null;
  
  function initDragAndDrop() {
    // Gestion du début du drag
    document.querySelectorAll('.appointment-card').forEach(card => {
      card.addEventListener('dragstart', function(e) {
        draggedAppointment = {
          id: this.dataset.appointmentId,
          element: this
        };
        this.style.opacity = '0.4';
        e.dataTransfer.effectAllowed = 'move';
      });
      
      card.addEventListener('dragend', function(e) {
        this.style.opacity = '1';
        document.querySelectorAll('.time-slot').forEach(slot => {
          slot.classList.remove('drag-over');
        });
      });
    });
    
    // Gestion du drop sur les créneaux
    document.querySelectorAll('.time-slot').forEach(slot => {
      slot.addEventListener('dragover', function(e) {
        e.preventDefault();
        e.dataTransfer.dropEffect = 'move';
        this.classList.add('drag-over');
      });
      
      slot.addEventListener('dragleave', function(e) {
        this.classList.remove('drag-over');
      });
      
      slot.addEventListener('drop', function(e) {
        e.preventDefault();
        this.classList.remove('drag-over');
        
        if (!draggedAppointment) return;
        
        const newDate = this.dataset.day;
        const newTime = this.dataset.time;
        const appointmentId = draggedAppointment.id;
        
        // Vérifier si le créneau est libre (pas d'autre RDV visible)
        const existingAppointments = this.querySelectorAll('.appointment-card');
        if (existingAppointments.length > 0) {
          alert('⚠️ Ce créneau est déjà occupé. Veuillez choisir un autre créneau.');
          return;
        }
        
        // Demander confirmation
        const formattedDate = new Date(newDate).toLocaleDateString('fr-FR', { 
          weekday: 'long', 
          day: 'numeric', 
          month: 'long', 
          year: 'numeric' 
        });
        if (!confirm(`Déplacer le rendez-vous au ${formattedDate} à ${newTime} ?`)) {
          return;
        }
        
        // Créer la nouvelle date/heure
        const newDateTime = `${newDate}T${newTime}:00`;
        
        // Appeler l'API pour mettre à jour
        fetch(`/appointments/${appointmentId}/update_date`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
          },
          body: JSON.stringify({
            start: newDateTime
          })
        })
        .then(response => {
          if (!response.ok) {
            return response.json().then(data => {
              throw new Error(data.errors ? data.errors.join(', ') : 'Erreur lors du déplacement');
            });
          }
          return response.json();
        })
        .then(data => {
          if (data.success) {
            // Recharger la page pour afficher les changements
            window.location.reload();
          } else {
            alert('❌ ' + (data.errors ? data.errors.join('\n') : 'Impossible de déplacer le rendez-vous'));
          }
        })
        .catch(error => {
          console.error('Erreur:', error);
          alert('❌ ' + error.message);
        });
        
        draggedAppointment = null;
      });
    });
  }
  
  // Initialiser au chargement
  document.addEventListener('DOMContentLoaded', initDragAndDrop);
  document.addEventListener('turbo:load', initDragAndDrop);
</script>
