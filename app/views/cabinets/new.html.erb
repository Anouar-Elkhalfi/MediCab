<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body p-5">
          <h1 class="text-center mb-4">Créer votre cabinet médical</h1>
          <p class="text-muted text-center mb-4">
            Configurez les informations de votre cabinet pour commencer à utiliser MediCab
          </p>

          <%= simple_form_for @cabinet do |f| %>
            <%= f.input :nom, 
                        label: "Nom du cabinet", 
                        placeholder: "Cabinet Dr. Dupont",
                        required: true %>
            
            <%= f.input :specialite, 
                        label: "Spécialité principale",
                        collection: ['Médecine générale', 'Cardiologie', 'Dermatologie', 'Pédiatrie', 'Psychiatrie', 'Autre'],
                        include_blank: "Sélectionnez une spécialité" %>
            
            <%= f.input :adresse, 
                        label: "Adresse",
                        as: :text,
                        input_html: { rows: 3 },
                        placeholder: "123 Rue de la Santé, 75000 Paris" %>
            
            <div class="row">
              <div class="col-md-6">
                <%= f.input :telephone, 
                            label: "Téléphone",
                            placeholder: "01 23 45 67 89" %>
              </div>
              <div class="col-md-6">
                <%= f.input :email, 
                            label: "Email du cabinet",
                            placeholder: "contact@cabinet.com" %>
              </div>
            </div>
            
            <%= f.input :siret, 
                        label: "SIRET (optionnel)",
                        placeholder: "123 456 789 00000" %>

            <div class="d-grid gap-2 mt-4">
              <%= f.button :submit, "Créer mon cabinet", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
