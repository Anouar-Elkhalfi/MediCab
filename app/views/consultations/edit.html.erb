<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">
            <i class="fas fa-notes-medical"></i> Modifier le Compte Rendu
          </h3>
        </div>
        <div class="card-body">
          <!-- Info patient -->
          <div class="alert alert-info mb-4">
            <div class="row">
              <div class="col-md-6">
                <strong>Patient:</strong> <%= @appointment.patient.nom_complet %><br>
                <strong>N° Dossier:</strong> <%= @appointment.patient.numero_dossier %>
              </div>
              <div class="col-md-6">
                <strong>Date RDV:</strong> <%= l(@appointment.date_rdv, format: :long) %><br>
                <strong>Heure:</strong> <%= @appointment.heure_debut.strftime("%H:%M") %>
              </div>
            </div>
          </div>

          <%= simple_form_for [@appointment, @consultation] do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <!-- Section 1: Motif et Antécédents -->
            <h5 class="text-primary mt-3 mb-3"><i class="fas fa-clipboard-list"></i> Informations Générales</h5>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :motif,
                           as: :text,
                           label: "Motif de consultation *",
                           input_html: { class: 'form-control', rows: 3 },
                           hint: "Raison de la visite du patient",
                           required: true %>
              </div>
              <div class="col-md-6">
                <%= f.input :antecedents,
                           as: :text,
                           label: "Antécédents médicaux",
                           input_html: { class: 'form-control', rows: 3 },
                           hint: "Antécédents personnels et familiaux",
                           required: false %>
              </div>
            </div>

            <!-- Section 2: Examen et Diagnostic -->
            <h5 class="text-success mt-4 mb-3"><i class="fas fa-stethoscope"></i> Examen et Diagnostic</h5>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :examen_clinique,
                           as: :text,
                           label: "Examen clinique",
                           input_html: { class: 'form-control', rows: 5 },
                           hint: "Constats lors de l'examen physique",
                           required: false %>

                <%= f.input :examens_complementaires,
                           as: :text,
                           label: "Examens complémentaires",
                           input_html: { class: 'form-control', rows: 3 },
                           hint: "Analyses, radiographies, etc.",
                           required: false %>
              </div>

              <div class="col-md-6">
                <%= f.input :diagnostic,
                           as: :text,
                           label: "Diagnostic *",
                           input_html: { class: 'form-control', rows: 5 },
                           hint: "Diagnostic médical de la consultation",
                           required: true %>

                <%= f.input :conclusion,
                           as: :text,
                           label: "Conclusion",
                           input_html: { class: 'form-control', rows: 3 },
                           hint: "Conclusion du diagnostic",
                           required: false %>
              </div>
            </div>

            <!-- Section 3: Traitement et Suivi -->
            <h5 class="text-info mt-4 mb-3"><i class="fas fa-pills"></i> Traitement et Suivi</h5>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :traitement,
                           as: :text,
                           label: "Traitement prescrit",
                           input_html: { class: 'form-control', rows: 5 },
                           hint: "Médicaments et posologie",
                           required: false %>

                <%= f.input :ordonnance,
                           as: :text,
                           label: "Ordonnance détaillée",
                           input_html: { class: 'form-control', rows: 5 },
                           hint: "Détail de l'ordonnance médicale",
                           required: false %>
              </div>

              <div class="col-md-6">
                <%= f.input :observations,
                           as: :text,
                           label: "Observations",
                           input_html: { class: 'form-control', rows: 5 },
                           hint: "Notes cliniques, recommandations",
                           required: false %>

                <%= f.input :notes_internes,
                           as: :text,
                           label: "Notes internes",
                           input_html: { class: 'form-control', rows: 3 },
                           hint: "Notes confidentielles (non visibles sur ordonnance)",
                           required: false %>

                <%= f.input :prochain_rdv,
                           as: :date,
                           html5: true,
                           label: "Prochain RDV (optionnel)",
                           input_html: { class: 'form-control' },
                           required: false %>
              </div>
            </div>

            <div class="alert alert-warning mt-3">
              <i class="fas fa-lock"></i> 
              <strong>Confidentialité:</strong> Ce compte rendu est strictement confidentiel et ne sera visible que par les médecins du cabinet.
            </div>

            <div class="d-flex justify-content-between mt-4">
              <%= link_to "Annuler", appointment_path(@appointment), class: "btn btn-secondary" %>
              <%= f.button :submit, "Mettre à jour le compte rendu", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
